#!/bin/sh
#!/bin/sh -x

case "${1}" in
   start)
      /sbin/syslogd &&
      /sbin/klogd
      ;;

   stop)
      kill `cat /var/run/klogd.pid` &&
      kill `cat /var/run/syslogd.pid`
      ;;

   restart)
      ${0} stop &&
      sleep 1 &&
      ${0} start
      ;;

   *)
      echo "Usage: ${0} {start|stop|restart}"
      exit 1
      ;;
esac
