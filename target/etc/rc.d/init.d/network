#!/bin/sh -x

case "${1}" in
   start)
      hostname `cat /etc/hostname`
      ifconfig lo up
      dhcpcd
      ;;

   stop)
      dhcpcd -k
      ifconfig lo down
      ;;

   restart)
      ${0} stop
      sleep 1
      ${0} start
      ;;

   *)
      echo "Usage: ${0} {start|stop|restart}"
      exit 1
      ;;
esac
